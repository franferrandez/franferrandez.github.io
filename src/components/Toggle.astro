<button class="toggle-dark-mode ml-3 p-1 rounded-lg hover:scale-110"></button>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggles = document.querySelectorAll('.toggle-dark-mode');
    const html = document.querySelector('html');

    // Verificar si hay elementos toggle y el html
    if (toggles.length === 0 || !html) {
      throw new Error('Element not found');
    }

    // Función para cambiar el ícono de todos los toggles según el modo oscuro
    function updateAllTogglesIcon() {
      toggles.forEach(toggle => {
        if (html.classList.contains('dark')) {
          toggle.innerHTML = getLightIcon();
        } else {
          toggle.innerHTML = getDarkIcon();
        }
      });
    }

    // Inicializa los íconos de los toggles según el esquema de color inicial
    updateAllTogglesIcon();

    // Agregar el evento de clic para alternar el modo oscuro y actualizar los íconos
    toggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        html.classList.toggle('dark');
        updateAllTogglesIcon(); // Actualizar todos los toggles
      });
    });

    // Funciones para obtener los íconos
    function getLightIcon() {
      return `
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
        </svg>
      `;
    }

    function getDarkIcon() {
      return `
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
        </svg>
      `;
    }
  });
</script>
