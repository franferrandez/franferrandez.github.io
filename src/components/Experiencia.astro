<Section title="Experiencia">
  <div class="flex flex-col timeline justify-center items-center">
    <Puesto
      company="Smurfit Kappa Iberoamericana SL"
      duration="jun 2022 - dic 2022"
      description="Soporte IT a la fábrica. Redes y shell scripting."
    />
    <Puesto
      company="Akra Informática Coop V"
      duration="ene 2023 - actualidad"
      description="Desarrollo de aplicaciones."
    />
  </div>
