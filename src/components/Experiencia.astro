<style>
  /* The actual timeline (the vertical ruler) */
  .timeline {
    position: relative;
    margin: 0 auto;
  }

  /* The actual timeline (the vertical ruler) */
  .timeline::after {
    content: "";
    position: absolute;
    width: 20px;
    background-color: rgb(var(--text-color));
    top: 0;
    bottom: 0;
    border-radius: 15px;
  }
</style>
